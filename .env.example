# Environment Configuration
# Copy this file to .env and update values

# App
APP_NAME=Medical Imaging System
APP_VERSION=1.0.0
DEBUG=true
API_V1_PREFIX=/api/v1

# Security
SECRET_KEY=your-super-secret-key-change-in-production-123456789
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/medical_imaging

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5670
RABBITMQ_USER=user
RABBITMQ_PASSWORD=adminace123
RABBITMQ_VHOST=/

# CORS
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# File Storage
UPLOAD_DIR=uploads
STATIC_DIR=static
PATIENT_FILES_DIR=patient_files

# Inference Model
MODEL_CHECKPOINT=DoAnPtit_Xray2CT/checkpoints/model-81.pt
